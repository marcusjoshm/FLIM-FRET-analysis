#!/bin/bash

# FLIM-FRET Installation Wrapper
# This script runs the Python installation script

echo "FLIM-FRET Installation"
echo "=================================="
echo "This will install FLIM-FRET globally - you will be able to run flimfret from any directory!"
echo ""

# Check if Python 3.8+ is available
if ! command -v python3 &> /dev/null; then
    echo "Error: Python 3 is not installed or not in PATH"
    echo "Please install Python 3.8+ and try again"
    echo ""
    echo "Installation options:"
    echo "  macOS: brew install python@3.11"
    echo "  Ubuntu: sudo apt install python3"
    echo "  Or download from: https://www.python.org/downloads/"
    exit 1
fi

# Run the Python installation script
python3 src/python/install.py "$@"
